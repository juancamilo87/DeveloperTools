<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scythe.developertools.MainActivity">


    <Button
        android:id="@+id/display_tools_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_tools_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/memory_tools_button"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/memory_tools_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/memory_tools_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/display_tools_button"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
